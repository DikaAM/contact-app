<div class="container mt-3">
  <div class="row">
    <div class="md-col-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary mb-3" role="button"
        ><i class="bi bi-plus-circle"></i> Add Contact</a
      >
      <% if (msg.length != 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">No. Handphone</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Contact data was not found
              </div>
            </td>
          </tr>
          <% } else { %> <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.email %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="btn btn-success badge text-bg-success"
                role="button"
                ><i class="bi bi-info-circle"></i> Detail</a
              >
            </td>
          </tr>
          <% }) %><% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
